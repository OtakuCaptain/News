<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_text_image0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/ic_launcher" />

    <TextView
        android:layout_toStartOf="@+id/tv_reply_count"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_text_image0"
        android:maxLines="1"
        android:text="男子楼道专偷名牌鞋 被抓后称:鞋没在屋里不算偷"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:layout_margin="5dp"
        android:layout_toStartOf="@+id/tv_reply_count"
        android:id="@+id/tv_digest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_toEndOf="@+id/iv_text_image0"
        android:maxLines="2"
        android:text="据央视新闻12月12日消息，近日，浙江绍兴一名中年男子因在小区楼道内偷名牌鞋被当地警方抓获。被抓后，该名男子却称，鞋不在屋里，就不是盗窃。被盗住户楼道中的监控显" />

    <TextView

        android:layout_toStartOf="@+id/tv_reply_count"
        android:id="@+id/tv_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_digest"
        android:layout_toEndOf="@+id/iv_text_image0"
        android:text="洋葱新闻" />

    <TextView
        android:layout_marginStart="5dp"
        android:layout_below="@+id/tv_title"
        android:layout_width="70dp"
        android:layout_toEndOf="@+id/tv_digest"
        android:id="@+id/tv_edit_time"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="20120315" />

    <TextView
        android:layout_marginStart="5dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_reply_count"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:text="233" />

</RelativeLayout>